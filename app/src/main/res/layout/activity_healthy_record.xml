<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.home.healthyRecord.HealthyRecordActivity"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="388dp"
            android:layout_height="250dp"
            app:cardBackgroundColor="#FFF3F4"
            app:cardCornerRadius="16dp"
            android:layout_margin="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/blood_Tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Blood Pressure"
                    android:textColor="#812C2C"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/start_line"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_red_ic"
                  app:layout_constraintEnd_toStartOf="@id/end_line"
                    android:layout_margin="28dp"

                    app:layout_constraintTop_toTopOf="parent"

                    />
                <TextView
                    android:id="@+id/data_blood_Tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Data"
                    android:textColor="#A86B6B"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/start_line"
                    app:layout_constraintTop_toBottomOf="@id/blood_Tex" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardData"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="49dp"
                    app:cardCornerRadius="6dp"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/blood_Tex"
                 app:cardBackgroundColor="@color/white"
                >
                  <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="35dp"
                  android:text="20-11-2205"
                  android:textColor="#A3A3A3"
                  android:textSize="24sp"
                      android:layout_gravity="center|start"
                  />
              </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/numRec_blood_Tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Num"
                    android:textColor="#A86B6B"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/start_line"
                    app:layout_constraintTop_toBottomOf="@id/cardData" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNum"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="6dp"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintEnd_toStartOf="@+id/end_line"
                    app:layout_constraintStart_toEndOf="@id/start_line"
                    app:layout_constraintTop_toBottomOf="@id/numRec_blood_Tex">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="35dp"
                        android:text="190"
                        android:textColor="#A3A3A3"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>


              <View
                  android:id="@+id/start_line"
                  android:layout_width="6dp"
                  android:layout_height="277dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:background="#812C2C"/>
              <View
                  android:id="@+id/end_line"
                  android:layout_width="6dp"
                  android:layout_height="277dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:background="#812C2C"/>
          </androidx.constraintlayout.widget.ConstraintLayout>

      </androidx.cardview.widget.CardView>

  </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear1">

        <androidx.cardview.widget.CardView
            android:layout_width="388dp"
            android:layout_height="250dp"
            app:cardBackgroundColor="#FEFFFD"
            app:cardCornerRadius="16dp"
            android:layout_margin="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/diabetes_Tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Diabetes"
                    android:textColor="#2E812C"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/start_line2"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_green_ic"
                    app:layout_constraintEnd_toStartOf="@id/end_line2"
                    android:layout_margin="28dp"

                    app:layout_constraintTop_toTopOf="parent"

                    />
                <TextView
                    android:id="@+id/data_diabetes_Tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Data"
                    android:textColor="#74A86B"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/start_line2"
                    app:layout_constraintTop_toBottomOf="@id/diabetes_Tex" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardData2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="49dp"
                    app:cardCornerRadius="6dp"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/diabetes_Tex"
                    app:cardBackgroundColor="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:text="20-11-2205"
                        android:textColor="#A3A3A3"
                        android:textSize="24sp"
                        android:layout_gravity="center|start"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/numRec_diabetes_Tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Num"
                    android:textColor="#74A86B"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/start_line2"
                    app:layout_constraintTop_toBottomOf="@id/cardData2" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNum2"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="6dp"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintEnd_toStartOf="@+id/end_line2"
                    app:layout_constraintStart_toEndOf="@id/start_line2"
                    app:layout_constraintTop_toBottomOf="@id/numRec_diabetes_Tex">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="35dp"
                        android:text="190"
                        android:textColor="#A3A3A3"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>


                <View
                    android:id="@+id/start_line2"
                    android:layout_width="6dp"
                    android:layout_height="277dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="#2E812C"/>
                <View
                    android:id="@+id/end_line2"
                    android:layout_width="6dp"
                    android:layout_height="277dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="#2E812C"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear2">

        <androidx.cardview.widget.CardView
            android:layout_width="388dp"
            android:layout_height="250dp"
            app:cardBackgroundColor="#E8F1FF"
            app:cardCornerRadius="16dp"
            android:layout_margin="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/weight_Tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="The Weight"
                    android:textColor="#344B9D"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/start_line3"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_blue_ic"
                    app:layout_constraintEnd_toStartOf="@id/end_line3"
                    android:layout_margin="28dp"
                    app:layout_constraintTop_toTopOf="parent"

                    />
                <TextView
                    android:id="@+id/data_weight_Tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Data"
                    android:textColor="#6B78A8"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/start_line3"
                    app:layout_constraintTop_toBottomOf="@id/weight_Tex" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardData3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="49dp"
                    app:cardCornerRadius="6dp"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/weight_Tex"
                    app:cardBackgroundColor="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:text="20-11-2205"
                        android:textColor="#A3A3A3"
                        android:textSize="24sp"
                        android:layout_gravity="center|start"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/numRec_weight_Tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Num"
                    android:textColor="#6B78A8"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/start_line3"
                    app:layout_constraintTop_toBottomOf="@id/cardData3" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNum3"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="6dp"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintEnd_toStartOf="@+id/end_line3"
                    app:layout_constraintStart_toEndOf="@id/start_line3"
                    app:layout_constraintTop_toBottomOf="@id/numRec_weight_Tex">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="35dp"
                        android:text="190"
                        android:textColor="#A3A3A3"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>


                <View
                    android:id="@+id/start_line3"
                    android:layout_width="6dp"
                    android:layout_height="277dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="#344B9D"/>
                <View
                    android:id="@+id/end_line3"
                    android:layout_width="6dp"
                    android:layout_height="277dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="#344B9D"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
